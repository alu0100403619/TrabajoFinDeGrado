<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_text_button"
        android:id="@+id/simple_data_button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="sendTextData" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/binary_button"
        android:id="@+id/binary_data_button"
        android:layout_below="@+id/simple_data_button"
        android:layout_centerHorizontal="true"
        android:onClick="sendBinaryData" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/multiple_pieces_button"
        android:id="@+id/send_multiple_pieces_button"
        android:layout_below="@+id/binary_data_button"
        android:layout_centerHorizontal="true"
        android:onClick="sendMultipliPieces" />
</RelativeLayout>

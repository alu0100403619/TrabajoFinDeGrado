<?xml version="1.0" encoding="UTF-8" ?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp" android:background="@drawable/registerwater"
    android:weightSum="1">

    <TabHost xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@android:id/tabhost"
        android:layout_width="fill_parent"
        android:layout_height="420dp"
        android:layout_weight="0.98">

        <LinearLayout android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5dp">

            <TabWidget android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <FrameLayout android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </TabHost>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button android:id="@+id/circularesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/circulares"
            android:onClick="launchCirculares" />

        <Button android:id="@+id/DatesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Dates"
            android:onClick="launchDates" />

    </LinearLayout>
</LinearLayout>


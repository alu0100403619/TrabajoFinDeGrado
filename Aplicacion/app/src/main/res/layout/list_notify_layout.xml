<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:id="@+id/name_remitter"
        android:layout_width="wrap_content" style="@style/ListItem"
        android:layout_height="wrap_content" />

    <TextView android:id="@id/empty"
        android:layout_width="5dp" style="@style/ListItem"
        android:layout_height="wrap_content" android:text="@string/empty"/>

    <TextView android:id="@+id/number_messages"
        android:layout_width="wrap_content" style="@style/ListItem"
        android:layout_height="wrap_content" />

</LinearLayout>
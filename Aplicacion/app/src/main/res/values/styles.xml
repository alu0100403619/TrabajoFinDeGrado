<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:buttonStyle">@style/CustomButton</item>
        <item name="android:editTextStyle">@style/CustomEditText</item>
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
    </style>

    <style name="CustomActionBar" parent="android:Widget.ActionBar">
        <item name="android:background">@color/Navy</item>
        <item name="android:titleTextStyle">@style/titleTextStyle</item>
    </style>

    <style name="titleTextStyle" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:textColor">@color/MintCream</item>
    </style>

    <style name="CustomButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="CustomEditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/custom_edit_text</item>
    </style>

    <style name="CustomTextView" parent="android:Widget.TextView">
        <item name="android:textAppearance">?android:textAppearanceListItem</item>
    </style>

    <style name="ListItem" parent="AppTheme">
        <item name="android:textAppearance">?android:textAppearanceListItem</item>
    </style>

    <style name="text" parent="AppTheme">
        <item name="android:textAppearance">?android:textAppearance</item>
    </style>

    <style name="ListSubItem" parent="AppTheme">
        <item name="android:textAppearance">?android:textAppearanceListItemSecondary</item>
    </style>

    <style name="BackgroundMessageAlumno" parent="AppTheme">
        <item name="android:background">@color/LightGreen</item>
    </style>

    <style name="BackgroundMessageFather" parent="AppTheme">
        <item name="android:background">@color/SkyBlue</item>
    </style>

    <style name="BackgroundMessageTeacher" parent="AppTheme">
        <item name="android:background">@color/Salmon</item>
    </style>

    <style name="WelcomeTabs" parent="android:Widget">
        <item name="android:background">@drawable/tabs2</item>
        <item name="android:textColor">@color/MintCream</item>
    </style>

    <style name="listItemeffect" parent="android:Widget.ListView">
        <item name="android:background">@drawable/listeffect</item>
        <item name="android:textColor">@color/MintCream</item>
    </style>

    <style name="listGroupeffect" parent="android:Widget.ListView">
        <item name="android:background">@drawable/groupeffect</item>
        <item name="android:textColor">@color/DarkGreen</item>
    </style>

    <style name="textViewafter" parent="android:Widget.TextView">
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/MidnightBlue</item>
        <item name="android:background">@color/YellowGreen</item>
    </style>

    <style name="chatEditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/chatedittext</item>
        <item name="android:textColor">@color/DarkGreen</item>
    </style>

    <style name="DataContact" parent="android:Widget.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <style name="DataContactLabel" parent="android:Widget.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SonDataContactLabel" parent="android:Widget.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="myDataEditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/chatedittext</item>
        <item name="android:textColor">@color/DarkGreen</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>

</resources>